<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="sg.edu.np.spendid" >

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Spendid_Light" >
        <activity android:name=".SearchActivity"/>
        <activity android:name=".ViewTransactionActivity" />
        <activity android:name=".WalletCurrencyActivity" />
        <activity android:name=".AddWalletActivity" />
        <activity android:name=".EditRecordActivity" />
        <activity android:name=".TransactionHistoryActivity"/>
        <activity android:name=".ManageWalletActivity"/>
        <activity android:name=".SelectWalletActivity"/>
        <activity android:name=".NewRecordActivity"/>
        <activity android:name=".MainActivity" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>