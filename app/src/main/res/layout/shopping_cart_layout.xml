<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:id="@+id/shopListMainCart_cardView"
        android:layout_width="165dp"
        android:layout_height="110dp"
        android:foreground="?android:attr/selectableItemBackground"
        android:clickable="true"
        android:focusable="true"
        android:layout_margin="20dp"
        app:cardCornerRadius="15dp"
        app:cardElevation="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="15dp">

            <TextView
                android:id="@+id/shopListMainCartName_textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Cart Name"
                android:textAlignment="center"
                android:textSize="18sp"
                android:layout_marginBottom="5dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/shopListMainCartAmt_textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="0.00"
                android:layout_marginBottom="5dp"
                android:textAlignment="center"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/shopListMainCartItems_textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="0/5 Items"
                android:textAlignment="textEnd"
                android:textSize="14sp" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>