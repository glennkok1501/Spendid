<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:showDividers="middle"
    android:divider="?subtitleTextColor"
    android:background="?backgroundColor"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/curTransChild_linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?android:attr/selectableItemBackground"
        android:clickable="true"
        android:focusable="true"
        android:padding="20dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:orientation="vertical">

            <TextView
                android:id="@+id/curTransChildName_textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textStyle="bold"
                android:text="Name" />

            <TextView
                android:id="@+id/curTransChildTime_textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:textColor="?subtitleTextColor"
                android:text="hh:MM:ss" />
        </LinearLayout>

        <TextView
            android:id="@+id/curTransChildAmt_textView"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:gravity="bottom|end"
            android:textSize="16sp"
            android:text="0.00" />

        <TextView
            android:id="@+id/curTransChildCur_textView"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:gravity="bottom|end"
            android:textSize="12sp"
            android:textColor="?subtitleTextColor"
            android:text="CUR" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            app:tint="?subtitleTextColor"
            android:src="@drawable/ic_arrow_forward_24" />

    </LinearLayout>
</RelativeLayout>