<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    android:id="@+id/viewpager_recurringRelativeLayout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/sel_RecurringName_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Recurring Name"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="10dp"
        android:layout_marginStart="20dp"
        android:textStyle="bold"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/sel_recurringFrequency_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        app:layout_constraintStart_toStartOf="@id/sel_RecurringName_textView"
        app:layout_constraintTop_toBottomOf="@id/sel_RecurringName_textView"
        android:text="Frequency" />

    <TextView
        android:id="@+id/sel_recurringDate_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Last Updated"
        android:textColor="?subtitleTextColor"
        android:layout_marginTop="5dp"
        app:layout_constraintStart_toStartOf="@id/sel_recurringFrequency_textView"
        app:layout_constraintTop_toBottomOf="@id/sel_recurringFrequency_textView"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/sel_recurringAmt_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0.00"
        android:layout_marginEnd="20dp"
        app:layout_constraintTop_toTopOf="@id/sel_RecurringName_textView"
        app:layout_constraintBottom_toBottomOf="@id/sel_recurringDate_textView"
        app:layout_constraintEnd_toEndOf="parent"
        android:textSize="24sp"/>

    <View
        android:id="@+id/sel_recurring_div"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/sel_recurringDate_textView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="?android:attr/listDivider" />


</androidx.constraintlayout.widget.ConstraintLayout>
