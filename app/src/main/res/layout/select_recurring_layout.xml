<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/viewpager_recurringRelativeLayout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        app:cardBackgroundColor="?colorOnBackground"
        app:cardElevation="10dp"
        android:id="@+id/sel_recurring_cardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        app:cardCornerRadius="15dp"
        android:foreground="?android:attr/selectableItemBackground"
        android:clickable="true"
        android:focusable="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/sel_RecurringName_textView"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Recurring Name"
                android:layout_weight="1"
                android:gravity="center|start"
                android:paddingStart="5dp"
                android:textStyle="bold"
                android:textSize="18sp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:padding="5dp">

                <TextView
                    android:id="@+id/sel_recurringAmt_textView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="0.00"
                    android:textSize="16sp"/>

                <TextView
                    android:id="@+id/sel_recurringFrequency_textView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="TextView" />

                <TextView
                    android:id="@+id/sel_recurringDate_textView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Last Updated"
                    android:textColor="?subtitleTextColor"
                    android:textSize="12sp" />
            </LinearLayout>

        </LinearLayout>
    </androidx.cardview.widget.CardView>
</RelativeLayout>

