<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Spendid" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/denim</item>
        <item name="colorPrimaryVariant">@color/tory_blue</item>
        <item name="colorAccent">@color/royal_blue</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="subtitleTextColor">@color/night_sub_text</item>
        <item name="colorOnBackground">@color/night_bgSecondary</item>
        <item name="backgroundColor">@color/night_background</item>
        <item name="colorOnPrimarySurface">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/fire_bush</item>
        <item name="colorSecondaryVariant">@color/pizza</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:textColor">@color/white</item>
    </style>
</resources>